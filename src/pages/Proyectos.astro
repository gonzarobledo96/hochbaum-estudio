  @media (min-width: 600px) {
    .Galeria-img {
      grid-template-columns: repeat(2, 1fr);
      margin-top: 6em;
    }
  }
  @media (min-width: 800px) {
    /* .Galeria-img {
      grid-template-columns: repeat(4, 1fr);
      margin: 0 auto;} */
    }

    .Galeria-img {
      grid-template-columns: repeat(4, 1fr);
    display: grid;
    grid-gap: 0px;
    /* padding: 5rem 8rem 5rem 8rem; */
    padding: 5rem 0rem 5rem 0rem;
    margin: 0 auto;

  
  }


.Galeria-img .fila {
    display: flex;
    justify-content: space-between;
    height: 500px;
    filter: grayscale(100%);
    transition: 0.5s;
  }
  .Galeria-img .fila:hover {
    filter: grayscale(0%);
    transition: 0.5s;
  }
  .Galeria-img .fila .imagenes {
    position: relative;
    overflow: hidden;
    transition: 0.3s;
    /* border-radius: 15px; */
  }
  .Galeria-img .fila .imagenes:hover {
    box-shadow: 5px 5px 10px 5px var(--color-hover);
    transition: 0.3s;
    
  }



  .info {
    position: absolute;
    background: rgba(0, 0, 0, 0.603);
    color: #ffffff;
    font-weight: 600;
    width: 100%;
    height: 100%;
    left: 0;
    opacity: 1; /* Cambiado a 1 por defecto */
    bottom: 0;
    transition: .5s;
    font-family: 'Montserrat', sans-serif;
}
.info h1 {
    padding: 1em;
    font-size: 1.2em;
    display: flex;
    justify-content: left;
    color: white; 
    
}
.info p {
  margin-top: 50%;
     padding-top: 90%;
     /* padding-bottom: 90%; */
    font-size: 1em;
    text-align: center; /* Centra el texto */
    letter-spacing: 5px;
    transform: rotate(-90deg);
}
.Galeria .fila .imagenes .info {
    opacity: 1;
    bottom: 0;
    transition: .5s;
}
.Galeria .fila .imagenes:hover .info {
    opacity: 0;
    bottom: -1000px;
}
img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}


